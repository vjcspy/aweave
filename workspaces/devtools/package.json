{
  "name": "@hod/aweave-workspace",
  "version": "0.1.24",
  "private": true,
  "description": "Unified development tools monorepo",
  "packageManager": "pnpm@10.30.3",
  "scripts": {
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @hod/aweave... build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "release": "bash scripts/build-release.sh",
    "release:dry-run": "bash scripts/build-release.sh --dry-run",
    "release:minor": "bash scripts/build-release.sh minor",
    "release:major": "bash scripts/build-release.sh major",
    "release:version:sync": "bash scripts/version-sync.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.4.0",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  }
}
