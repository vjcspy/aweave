{
  "name": "@hod/aweave-server",
  "version": "0.1.23",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "nest build && tsc-alias -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate:openapi": "ts-node -r tsconfig-paths/register src/scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@hod/aweave-config-common": "workspace:*",
    "@hod/aweave-config-core": "workspace:*",
    "@hod/aweave-dashboard-web": "workspace:*",
    "@hod/aweave-debate-web": "workspace:*",
    "@hod/aweave-nestjs-core": "workspace:*",
    "@hod/aweave-nestjs-dashboard": "workspace:*",
    "@hod/aweave-nestjs-debate": "workspace:*",
    "@nestjs/common": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-ws": "catalog:",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "catalog:",
    "@nestjs/websockets": "catalog:",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "catalog:",
    "@eslint/js": "catalog:",
    "@nestjs/cli": "catalog:",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.2",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "catalog:",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "catalog:",
    "tsc-alias": "catalog:",
    "tsconfig-paths": "^4.2.0",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
